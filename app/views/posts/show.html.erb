<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <% @post.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
    </div>
    <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
        <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "delete"}) %>
    </div>
    <h2>コメント一覧</h2>
    <% @comments.each do |c| %>
      <%= c.content %>
      <%= link_to("削除", "/posts/#{@post.id}/comments/#{c.id}/destroy") %>
      <hr>
    <% end %>
    <%= form_with url: "/posts/#{@post.id}/comments", model: @comment,local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.submit "コメントする" %>
    <% end %>
  </div>
</div>
