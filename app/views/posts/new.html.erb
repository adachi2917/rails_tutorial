<div class="main posts-new">
    <div class="container">
        <h1 class="form-heading">投稿する</h1>
        <div class="form">
            <div class="form-body">
                <%= form_with url:"/posts/create" do %>
                    <% @post.errors.full_messages.each do |message| %>
                        <div class="form-error">
                            <%= message %>
                        </div>
                    <% end %>
                    <textarea name="content"><%= @post.content %></textarea>
                    <div class="check_box">
                        <span>タグ</span>
                        <%= collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |t| %>
                            <div>
                                <%= t.label do %>
                                    <%= t.check_box %>
                                    <%= t.text %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                    <input type="submit" value="投稿">
                <% end %>
             </div>
        </div>
    </div>
</div>
